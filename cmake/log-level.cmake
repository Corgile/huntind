IF(HD_ENABLE_LOGS)
  SET(NEXT_LEVEL OFF)
  ADD_COMPILE_DEFINITIONS(HD_ENABLE_LOG)
  MESSAGE(STATUS "${BoldBlue}Console日志: ${BoldCyan}${HD_CONSOLE_LOG}${ColorReset}")
  IF(HD_CONSOLE_LOG)
    ADD_COMPILE_DEFINITIONS(HD_ENABLE_CONSOLE_LOG)
  ENDIF()
  MESSAGE(STATUS "${BoldBlue}日志等级: ${BoldCyan}${HD_LOG_LEVEL}${ColorReset}")

  IF(${HD_LOG_LEVEL} STREQUAL "TRACE")
    MESSAGE(STATUS "${BoldBlue}定义宏: ${BoldCyan}HD_LOG_LEVEL_${HD_LOG_LEVEL}${ColorReset}")
    ADD_COMPILE_DEFINITIONS(HD_LOG_LEVEL_${HD_LOG_LEVEL})
    SET(NEXT_LEVEL ON)
  ENDIF()
  IF(NEXT_LEVEL OR ${HD_LOG_LEVEL} STREQUAL "DEBUG")
    MESSAGE(STATUS "${BoldBlue}定义宏: ${BoldCyan}HD_LOG_LEVEL_DEBUG${ColorReset}")
    ADD_COMPILE_DEFINITIONS(HD_LOG_LEVEL_DEBUG)
    SET(NEXT_LEVEL ON)
  ENDIF()
  IF(NEXT_LEVEL OR ${HD_LOG_LEVEL} STREQUAL "INFO")
    MESSAGE(STATUS "${BoldBlue}定义宏: ${BoldCyan}HD_LOG_LEVEL_INFO${ColorReset}")
    ADD_COMPILE_DEFINITIONS(HD_LOG_LEVEL_INFO)
    SET(NEXT_LEVEL ON)
  ENDIF()
  IF(NEXT_LEVEL OR ${HD_LOG_LEVEL} STREQUAL "WARN")
    MESSAGE(STATUS "${BoldBlue}定义宏: ${BoldCyan}HD_LOG_LEVEL_WARN${ColorReset}")
    ADD_COMPILE_DEFINITIONS(HD_LOG_LEVEL_WARN)
    SET(NEXT_LEVEL ON)
  ENDIF()
  IF(NEXT_LEVEL OR ${HD_LOG_LEVEL} STREQUAL "ERROR")
    MESSAGE(STATUS "${BoldBlue}定义宏: ${BoldCyan}HD_LOG_LEVEL_ERROR${ColorReset}")
    ADD_COMPILE_DEFINITIONS(HD_LOG_LEVEL_ERROR)
    SET(NEXT_LEVEL ON)
  ENDIF()
  IF(NEXT_LEVEL OR ${HD_LOG_LEVEL} STREQUAL "FATAL")
    MESSAGE(STATUS "${BoldBlue}定义宏: ${BoldCyan}HD_LOG_LEVEL_FATAL${ColorReset}")
    ADD_COMPILE_DEFINITIONS(HD_LOG_LEVEL_FATAL)
  ENDIF()
ENDIF()
